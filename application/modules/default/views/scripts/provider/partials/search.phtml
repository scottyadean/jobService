$cities = array();
foreach( $this->locations as $location ){
   $l = strtoupper($this->truncate($location['city'], 1, ""));
   if(!in_array($l, $cities)){
    $cities[] = $l;
   }
}

$names = array();
foreach( $this->providers as $name ){
   $n = strtoupper($this->truncate($name['name'], 1, ""));
   if(!in_array($n, $names)){
    $names[] = $n;
   }
}

$tags = array();
foreach( $this->providers as $p ){
   $t = strtoupper($this->truncate($p['tags'], 1, ""));
   if(!in_array($t, $tags)){
    $tags[] = $t;
   }
}


